
.loading_screen {
  ackground:black;
  display:flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  width: 100%;
  margin:0;
  padding: 0;
}

div, img {
  padding:0;
  margin:0;
}

@keyframes pulsing {
  0%{
      width:12vw;
      height:12vw;
  }
  100%{
      width:19vw;
      height:19vw;
  }
}
@keyframes scaling_animation {
  0%{
    transform:scale(1);
  }
  100%{
    transform:scale(1.5);
  }
}

@keyframes loading_animation {
  0%{
/*      border: 0.5vw solid white; */

    ransform: rotate(0deg);
  }
  100% {
/*      border: 3vw solid white; */
     
    transform: rotate(360deg);
  }
}

.loading_container{
  border: 4px solid white;
  border-radius: 50%;
  position:relative;
  display:block;
  box-shadow: 0 0 30px white;
  display:flex;
  justify-content:center;
  align-items:center;
  width:12vw;
  height:12vw;
  transform-style: preserve-3d;
  animation: loading_animation 2s linear infinite;
  
  img {
    display:block;
    transform: translateZ(-1em);
    width:12vw;
    height:12vw;
  }
  
  .pulsing {
    position:absolute;
    width: 12vw;
    height:12vw;
    border-radius: 50%;
    border: 4px solid white;
    animation: pulsing 0.9s linear infinite;
  }

.pulsing-delayed {
    position:absolute;
    width: 12vw;
    height:12vw;
    border-radius: 50%;
    border: 4px solid white;
    animation: pulsing 0.9s linear infinite;
    animation-delay: 0.3s;
  }
}
